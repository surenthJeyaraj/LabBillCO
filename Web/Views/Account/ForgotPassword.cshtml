@model Web.Models.Account.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password Request";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}
@section HeaderScripts
{
    <style type="text/css">
       
        .login-title {
            color: #fff;
            font-weight: normal;
            font-size: 1.8rem;
            line-height: 2;
        }
    </style>

}
<legend class="login-title">Forgot Password</legend>
<legend style="display: none" class="select login-title">Reset Password</legend>
    <div class="col-md-12" id="searchCriteria" style="background-color: #00000047 !important;padding:30px 15px 15px 15px; color:#fff;">
        <section id="accountformSection">
            @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <h6>Please use the email used when creating the account to send your password reset link</h6>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "col-4 col-form-label" })
            <div class="col-7">
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row justify-content-right">
            <div class="col-4">
                
            </div>
            <div class="col-7">
                <input type="submit" class="btn btn-block btn-success" value="Reset Password" />
            </div>

        </div>
            }
</section>
    </div>
