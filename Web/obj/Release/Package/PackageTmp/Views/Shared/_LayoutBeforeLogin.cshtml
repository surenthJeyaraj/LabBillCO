<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="product" content="AuvTox Portal">
    <meta name="description" content="AuvTox portal to Key entry the details">
    <meta name="author" content="Sagitec - Chennai">

    <!--Stylesheets here-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/metro")
    @Styles.Render("~/Content/bootstrap")

    @Styles.Render("~/Content/jquerydatatable")


    <!-- Load JavaScript Libraries -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryaddons")
    @Scripts.Render("~/bundles/jquerydatatable")
    @Scripts.Render("~/bundles/jsrender")
    @Scripts.Render("~/bundles/metro")
    @*    @Scripts.Render("~/bundles/bootstrap")*@

    <!-- Metro UI CSS JavaScript plugins -->
    @* background-color:#4888b7;*@

    @*background-color: #5BB3B3; -Green*@

    <!-- Local JavaScript -->
    <title>AVUTOX Portal ::  @ViewBag.Title</title>
    <style type="text/css">
        html, body {
            height: 100%;
            background-color: #5bb3b3;
            margin: 0;
            padding: 0;
            width: 100%;
        }
   
        .primary-container {
            padding: 15px 7%;
            margin-bottom: 30px;
        }

        .primary-navbar {
            padding: 0 1rem;
            background: #2d313c;
        }

            .primary-navbar .navbar-brand {
                font-size: 1.0rem;
            }

            .primary-navbar .nav-link {
                font-size: 0.8rem;
            }

            .primary-navbar a {
                color: #fff;
            }

            .primary-navbar .navbar-text {
                padding: 0;
            }
        

        footer {
            padding: 3px;
            background-color: #2d313c;
            position: fixed;
            bottom: 0;
            right: 0;
            left: 0;
            font-size: 0.8rem;
            color: #ddd;
        }
        footer span {
            float: right;
            padding: 3px 15px;
            height: auto;
        }

        footer span img {
            height: 25px;
            width: auto;
            margin-right: 10px;
        }
        .centered-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: absolute;
            bottom: 0;
            right: 0;
            left: 0;
            top: 0;
        }

        .centered-box {
            width: 500px;
            margin: 5px;
            background: #ddd;
            text-align: center; /* will center text in <p>, which is not a flex item */
            background-color: transparent !important;
        }

        .footer { }
    </style>
    @RenderSection("HeaderScripts", false)
    @RenderSection("scripts", false)


</head>
<body data-baseurl="@Url.Content("~")" class="img-bg">
    <nav class="navbar navbar-expand-md navbar-inverse bg-inverse sticky-top primary-navbar">
        <a class="navbar-brand" href="@Url.Action("Welcome","Transaction")">LabBillCo Portal <sup>1.0</sup></a>
    </nav>
    <!-- Wrap all page content here -->
    <div class="container-fluid primary-container">
        <!-- Begin page content -->
        <div class="centered-container">
            <div class="centered-box" >
                @RenderBody()
            </div>
        </div>
    </div>
<footer class="footer ">
    <span class=""><img src="~/Images/brand_logo.png" />SagitecHLS</span>
</footer>
</body>
</html>
